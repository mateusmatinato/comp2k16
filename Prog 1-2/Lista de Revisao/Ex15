#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

void desintercala(char *a, char *b, char *c){

	int i,k,tam;
	i = k = 0;
	tam = strlen(c) - strlen(b);
		for(k=0;k<tam;i++){
			a[k] = c[i];
			k++;
			i++;
	}
}		

int main(){
	setlocale(LC_ALL, "Portuguese");
	char a[300],b[300],c[300];
	printf("Digite a primeira string(intercalada): ");
	fflush(stdin);
	scanf("%[^\n]",c);
	printf("Digite a segunda string(B): ");
	fflush(stdin);
	scanf("%[^\n]",b);
	desintercala(a,b,c);
	printf("A string A desintercalada Ã©: \n%s.\n",a);
system("pause");
return 0;
}
