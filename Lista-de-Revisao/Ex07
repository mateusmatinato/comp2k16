

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int f(int n){
if (n == 0 || n == 1)
	return 1;
else
	return 3 * f(n -2) + f(n-1);
}

int main(){
	setlocale(LC_ALL, "Portuguese");
	int n;
	printf("Digite o n√∫mero n: ");
	scanf("%d",&n);
	printf("%d\n\n",f(n));
}


/************
f(5) = (1) 3*f(3) + (2) f(4)

(1)
f(3) = 3*f(1) + f(2)
f(2) = 3*f(0) + f(1) = 3*1 + 1 = 4
f(3) = 3*1 + 4 = 7

(2) 
f(4) = 3*f(2) + f(3)
f(2) = 3*f(0) + f(1) = 4
f(3) = 3*f(1) + f(2) = 7
f(4) = 3*4 + 7 = 19

f(5) = 3*7 + 19 = 40
**********/
