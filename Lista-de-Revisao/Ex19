#include <stdio.h>
#include <stdlib.h>

#define MAX 101

int StrCmpN (char *str1, char *str2, int cont);

int main()
{
	int n, x; // n: limite da comparação de StrCmpN		x: recebe o retorno de StrCmpN
	char S1[MAX], S2[MAX];

	printf ("\n1ª string (sem caracteres acentuados): ");
	fgets (S1, 100, stdin);
	fflush (stdin);

	printf ("2ª string (sem caracteres acentuados: ");
	fgets (S2, 100, stdin);
	fflush (stdin);

	do
	{
		printf ("\nDefina o máximo de comparações a serem feitas: ");
		scanf ("%d", &n);
	} while (n < 1); // garante que pelo menos uma comparação será realizada

	x = StrCmpN (S1, S2, n);

	if (x < 0) printf ("\nA 1ª string é lexicograficamente menor que a 2ª, até o %dº caractere", n);

	else if (x == 0) printf("\nAs duas strings são lexicograficamente iguais até o %dº caractere", n);

	else printf ("\nA 1ª string é lexicograficamente maior que a 2ª, até o %dº caractere", n);

	puts ("\n\nTecle ENTER para encerrar o programa...");
	getchar(); getchar();

	return EXIT_SUCCESS;
}

int StrCmpN (char *str1, char *str2, int cont)
{
	int i = 0;
	while ((str1[i] == str2[i]) && (str1[i] != '\0') && (i < (cont - 1))) i++;
	return (str1[i] - str2[i]);
}
