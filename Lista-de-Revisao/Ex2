

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

float potencia(float x, int n){
	if(n==0) return 1;
	if(n>0){
		return x * potencia(x,n-1);
	}
	if(n<0){
		return 1/(x * potencia(n,n+1));
	}
}

int main(){
	setlocale(LC_ALL, "Portuguese");
	int n;
	float x;
	printf("Calculo de X^n\n");
	printf("Digite o valor de X: ");
	scanf("%f",&x);
	printf("Digite o valor de N: ");
	scanf("%d",&n);
	printf("%.2f elevado a %d Ã© igual a %.2f.\n",x,n,potencia(x,n));		
	system("Pause");
	return 0;
}
